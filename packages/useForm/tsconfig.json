{
    "compilerOptions": {
        "lib": ["DOM", "DOM.Iterable", "ES2020"],
        "target": "esnext",
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./build/types",
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitReturns": false,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noUncheckedIndexedAccess": true,
        "strictNullChecks": true,
        "jsx": "react",
        "declaration": true,
        "emitDeclarationOnly": true,
        "esModuleInterop": true,
        "skipLibCheck": true
    },

    "include": ["src"],
    "exclude": ["node_modules", "build", "dist", "rollup.config.js", "rollup.config.ts"]
}
